<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/17"
      fx:controller="view.LoginViewController">
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label prefHeight="92.0" prefWidth="605.0" text="Log in">
                    <padding>
                        <Insets left="245.0"/>
                    </padding>
                    <font>
                        <Font name="Bauhaus 93" size="45.0"/>
                    </font>
                </Label>
            </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label prefHeight="92.0" prefWidth="605.0"
                       text="Please enter your username">
                    <font>
                        <Font name="Bauhaus 93" size="30.0"/>
                    </font>
                    <padding>
                        <Insets left="130.0"/>
                    </padding>
                </Label>
            </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <TextField fx:id="inputField" onAction="#onEnter">
                    <HBox.margin>
                        <Insets left="220.0" top="25.0"/>
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button mnemonicParsing="false" onAction="#continueButton"
                        text="Continue">
                    <HBox.margin>
                        <Insets left="265.0" top="25.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label fx:id="errorLabel" prefHeight="92.0" prefWidth="600.0"
                       text="Error lablel"/>
            </children>
        </HBox>
    </children>
</VBox>
